<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:left="2dp" android:right="2dp" android:top="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#975505" /> <!-- Default background color -->
            <stroke
                android:color="#975505" android:width="2dp" /> <!-- Border width -->
            <corners android:radius="4dp" /> <!-- Adjust the radius for rounded corners -->
        </shape>
    </item>
    <item android:drawable="?android:attr/listChoiceIndicatorMultiple" />

</layer-list>