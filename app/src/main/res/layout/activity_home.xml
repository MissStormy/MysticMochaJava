<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ProfileVw"
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="19dp"
        android:onClick="OnClickProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="97dp"
        android:layout_height="98dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/ProfileVw"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logomm" />

    <TextView
        android:id="@+id/textView3"
        style="@style/LargeTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:text="Home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/CafeBtn"
        style="@style/CircularButton"
        android:layout_width="87dp"
        android:layout_height="88dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="93dp"
        android:layout_marginEnd="30dp"
        android:onClick="OnClickCafe"
        android:text="Cofee"
        app:layout_constraintEnd_toStartOf="@+id/BookBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <Button
        android:id="@+id/BookBtn"
        style="@style/CircularButton"
        android:layout_width="84dp"
        android:layout_height="86dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="90dp"
        android:onClick="OnClickBook"
        android:text="Books"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/CafeBtn"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <Button
        android:id="@+id/button5"
        style="@style/CircularButton"
        android:layout_width="231dp"
        android:layout_height="64dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        android:text="Nearby coffeeshop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CafeBtn" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="295dp"
        android:text="News"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button5" />

    <ScrollView
        android:layout_width="292dp"
        android:layout_height="263dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="339dp"
                android:src="@drawable/post1" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:src="@drawable/post2" />
        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/ShopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="77dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="16dp"
        android:onClick="OnClickShop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/carrito" />

</androidx.constraintlayout.widget.ConstraintLayout>